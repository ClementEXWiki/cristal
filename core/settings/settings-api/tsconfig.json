{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedDeclarations": false,
    "types": ["@xwiki/cristal-dsapi"],
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declarationMap": true
  },
  "extends": "../../../tsconfig.json",
  "include": [
    "./src/index.ts",
    "./src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
