{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "lib": ["DOM", "ESNext"],

    /* Bundler mode */
    "isolatedDeclarations": false,

    /* Building */
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "dist/"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
